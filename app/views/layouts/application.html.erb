<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width">
  <title><%= yield :title %> | CrowdCode</title>
  <%= stylesheet_link_tag :crowdcode %>
  <%= csrf_meta_tags %>
  <!-- <link rel="shortcut icon" type="image/ico" href="/favicon.gif" /> -->

  <script type="text/javascript">
    // GA here
  </script>
</head>
<body>

  <% if current_page? root_path %>
    <%= yield %>
  <% else %>
    <%= render 'shared/header' %>

    <div class="container">
      <%= yield %>
      <%#= render "shared/footer" %>
    </div>
  <% end %>

  <%= javascript_include_tag :application %>
  <%= yield :javascript_includes %>



  <% if signed_in? %>
    <div class="container">
      <div class="row">
        <div class="span-16">
          <p style="font-size: 1.3em; margin-top: 40px;">signed in as <%= current_user.username %></p>
        </div>
      </div>
    </div>
  <% end %>



</body>
</html>
