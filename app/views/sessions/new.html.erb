<% provide(:title, 'Log In') %>

<div class="row">
  <div class="span-6 offset-5">
    <h1>Log In</h1>
    <!-- <a href="/auth/github" class="btn btn-red btn-full" style="margin-top: 50px;">Sign in with GitHub</a> -->
    <a href="/auth/github" class="btn-auth btn-github">Sign in with GitHub</a>

    <%= form_tag sessions_path, class: "form-validate" do %>

      <%= flash_error %>

      <%= label_tag :email %>
      <%= email_field_tag :email, '', autofocus: true %>

      <%= label_tag :password %>
      <!-- <span class="help-text" style="font-weight: bold;"> -->
        <%#= link_to "(Forgot password?)", forgot_password_path %>
      <!-- </span> -->
      <%= password_field_tag :password %>

      <label class="checkbox">
        <%= check_box_tag :remember_me, 1 %>
        Remember Me
      </label>

      <%= submit_tag "Log in", class: "btn btn-blue" %>

    <% end %>

    <!--<span class="form-suggestion">
      Don't have an account?
      <%#= link_to raw("Sign up for free &raquo;"), signup_path %>
    </span>-->



  </div>
</div>
